{
    "env": {
        "browser": true,
        "es2021": true
    },
    "parser": "php",
    "parserOptions": {
        "ecmaVersion": 2021,
        "sourceType": "module"
    },
    "rules": {
        "comma-dangle": ["error", "always"],
        "eqeqeq": ["error", "always"],
        "no-empty": ["error"],
        "no-extra-semi": ["error"],
        "no-trailing-comma": ["error", { "arrays": true, "objects": true }],
        "single-quote": ["error"],
        "space-before-function-paren": ["error"],
        "yoda": ["error"]
    }
}
